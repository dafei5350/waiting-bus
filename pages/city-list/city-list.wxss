page{
	background-color: #ffffff;
}
.margin-shadow{
  padding: 20rpx 0rpx;
  box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 8px;
}
.cu-bar .search-form {
	background-color: #f5f5f5;
	line-height: 80rpx;
	height: 90rpx;
	font-size: 35rpx;
	color: var(--black);
  font-weight: bold;
	flex: 1;
	display: flex;
	align-items: center;
	margin: 0 30rpx;
  border-radius: 15rpx;
  box-shadow: rgba(0, 0, 0, 0.05) 0px 0px 0px 1px;
}
.city-container{
	width: 100%;
	padding: 20rpx 15rpx 30rpx;
}

.hot-city {
	display: flex;
	flex-direction: column;
}
.hot-city .city{
	/* display: flex;
	flex-wrap: wrap;
	justify-content: space-around; */
	flex: 1;
}


.indexes {
  position: relative;
}

.indexBar {
  position: fixed;
  right: 0px;
  bottom: 120rpx;
  padding: 20rpx 20rpx 20rpx 60rpx;
  display: flex;
  align-items: center;
}

.indexBar .indexBar-box {
  width: 40rpx;
  height: auto;
  background: #fff;
  display: flex;
  flex-direction: column;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
}

.indexBar-item {
  flex: 1;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #888;
}