
map {
  width: 100vw;
  height: 65vh;
}
.city{
	width: 200rpx;
	height: 65rpx;
	border-radius: 20px;
	position: fixed;
	left: 35rpx;
	background-color: #FFFFFF;
	opacity: .75;
	z-index: 10;
	box-shadow: 0px 0px 3px 2px rgba(177,177,177,0.23);
	display: flex;
	align-items: center;
	padding: 0 10rpx;
}
.location{
	position: fixed;
	bottom: 45%;
	right: 30rpx;
	width: 70rpx;
	height: 70rpx;
	border-radius: 50%;
	background-color: #FFFFFF;
	display: flex;
	align-items: center;
	justify-content: center;
	box-shadow: 0px 0px 5px 4px rgba(177,177,177,0.73);
}
.location .location-img{
	width: 55rpx;
	height: 55rpx;
}
.suspension{
	position: absolute;
	bottom: 0;
	width: 100%;
	background-color: #FFFFFF;
	border-top-left-radius: 30px;
	border-top-right-radius: 30px;

	padding: 30rpx;
	box-shadow: 0px 0px 3px 2px rgba(177,177,177,0.23);
  transition: .5s ease;
}
.suspension .tips{
	height: 5rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	margin-bottom: 15rpx;
}
.suspension .up{
	font-size: 75rpx; 
	color: #EEEEEE;
}
.suspension .down{
	font-size: 75rpx; 
	color: #EEEEEE;
	transform: rotate(-180deg);
}
.suspension .search{
	width: 100%;
	height: 75rpx;
	background-color: #F0F3F8;
	border-radius: 15rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: center;
}